# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here
VOYAGE_API_KEY=your_voyage_api_key_here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# BigQuery Configuration
BIGQUERY_PROJECT_ID=your_project_id
BIGQUERY_CREDENTIALS_PATH=path/to/credentials.json

# AWS Configuration (for S3 connector)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Vector Store Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
WEAVIATE_URL=http://localhost:8080

# Neo4j Configuration (for knowledge graph export)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Pipeline Configuration
PIPELINE_SCHEDULE=@daily
CHECKPOINT_DIRECTORY=./checkpoints
LOG_DIRECTORY=./logs

# Embedding Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_BATCH_SIZE=100
EMBEDDING_CACHE_SIZE=10000

# Chunking Configuration
CHUNKING_STRATEGY=sentence
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Retrieval Configuration
HYBRID_VECTOR_WEIGHT=0.5
HYBRID_BM25_WEIGHT=0.3
HYBRID_GRAPH_WEIGHT=0.2
TOP_K_RESULTS=10

# Monitoring Configuration
ENABLE_MONITORING=true
ALERT_ERROR_RATE_THRESHOLD=0.05
ALERT_SUCCESS_RATE_THRESHOLD=0.95
ALERT_MAX_LATENCY_SECONDS=3600

# Quality Monitoring
QUALITY_COMPLETENESS_THRESHOLD=0.95
QUALITY_MAX_AGE_HOURS=24

# Performance Configuration
MAX_WORKERS=4
BATCH_SIZE=100
REQUEST_TIMEOUT_SECONDS=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL_SECONDS=86400

# Development
DEBUG=false
TESTING=false